<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-calendar-alt"></i> Seasonal Discount Management</h1>
        <p>Schedule automatic discounts for holidays and special events.</p>
        <button class="btn-admin btn-admin-primary" onclick="openDiscountModal()">
            <i class="fas fa-plus"></i> Create Seasonal Discount
        </button>
    </div>

    <div class="admin-section">
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Value</th>
                        <th>Period</th>
                        <th>Applies To</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (discounts.length === 0) { %>
                        <tr>
                            <td colspan="8" class="no-data">No seasonal discounts found</td>
                        </tr>
                    <% } else { %>
                        <% discounts.forEach(discount => { %>
                            <tr>
                                <td>#<%= discount.id %></td>
                                <td><strong><%= discount.name %></strong></td>
                                <td><%= discount.discount_type === 'percentage' ? 'Percentage' : 'Fixed Amount' %></td>
                                <td>
                                    <% if (discount.discount_type === 'percentage') { %>
                                        <%= discount.discount_value %>%
                                    <% } else { %>
                                        $<%= parseFloat(discount.discount_value).toFixed(2) %>
                                    <% } %>
                                </td>
                                <td>
                                    <%= new Date(discount.start_date).toLocaleDateString() %> - 
                                    <%= new Date(discount.end_date).toLocaleDateString() %>
                                </td>
                                <td><%= discount.applies_to === 'all' ? 'All Plans' : 'Specific Plans' %></td>
                                <td>
                                    <% if (discount.is_active) { %>
                                        <span class="status-badge active">Active</span>
                                    <% } else { %>
                                        <span class="status-badge inactive">Inactive</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn-admin btn-admin-secondary" onclick='editDiscount(<%= JSON.stringify(discount) %>)' style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                            Edit
                                        </button>
                                        <button class="btn-admin btn-admin-danger" onclick="deleteDiscount(<%= discount.id %>)" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Discount Modal -->
<div id="discountModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Create Seasonal Discount</h3>
            <button class="modal-close" onclick="closeDiscountModal()">&times;</button>
        </div>
        <form id="discountForm" class="admin-form" onsubmit="saveDiscount(event)">
            <input type="hidden" id="discountId" name="id">
            
            <div class="form-group">
                <label>Discount Name *</label>
                <input type="text" name="name" id="discountName" class="form-control" required placeholder="e.g., Halloween 2024, Christmas Sale">
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label>Discount Type *</label>
                    <select name="discount_type" id="discountType" class="form-control" required>
                        <option value="percentage">Percentage (%)</option>
                        <option value="fixed">Fixed Amount ($)</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Discount Value *</label>
                    <input type="number" name="discount_value" id="discountValue" class="form-control" min="0" step="0.01" required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label>Start Date *</label>
                    <input type="datetime-local" name="start_date" id="discountStartDate" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label>End Date *</label>
                    <input type="datetime-local" name="end_date" id="discountEndDate" class="form-control" required>
                </div>
            </div>
            
            <div class="form-group">
                <label>Applies To *</label>
                <select name="applies_to" id="discountAppliesTo" class="form-control" required>
                    <option value="all">All Plans</option>
                    <option value="specific">Specific Plans</option>
                </select>
            </div>
            
            <div class="form-group">
                <label>
                    <input type="checkbox" name="is_active" id="discountActive" value="true" checked>
                    Active
                </label>
            </div>
            
            <div class="btn-group">
                <button type="submit" class="btn-admin btn-admin-primary">Save Discount</button>
                <button type="button" class="btn-admin btn-admin-secondary" onclick="closeDiscountModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/css/admin.css">
<script>
function openDiscountModal() {
    document.getElementById('modalTitle').textContent = 'Create Seasonal Discount';
    document.getElementById('discountForm').reset();
    document.getElementById('discountId').value = '';
    document.getElementById('discountModal').classList.add('active');
}

function closeDiscountModal() {
    document.getElementById('discountModal').classList.remove('active');
}

function editDiscount(discount) {
    document.getElementById('modalTitle').textContent = 'Edit Seasonal Discount';
    document.getElementById('discountId').value = discount.id;
    document.getElementById('discountName').value = discount.name;
    document.getElementById('discountType').value = discount.discount_type;
    document.getElementById('discountValue').value = discount.discount_value;
    document.getElementById('discountAppliesTo').value = discount.applies_to;
    
    const startDate = new Date(discount.start_date);
    document.getElementById('discountStartDate').value = startDate.toISOString().slice(0, 16);
    
    const endDate = new Date(discount.end_date);
    document.getElementById('discountEndDate').value = endDate.toISOString().slice(0, 16);
    
    document.getElementById('discountActive').checked = discount.is_active;
    document.getElementById('discountModal').classList.add('active');
}

async function saveDiscount(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const data = {
        id: formData.get('id') || null,
        name: formData.get('name'),
        discount_type: formData.get('discount_type'),
        discount_value: parseFloat(formData.get('discount_value')),
        start_date: formData.get('start_date'),
        end_date: formData.get('end_date'),
        applies_to: formData.get('applies_to'),
        is_active: document.getElementById('discountActive').checked
    };
    
    try {
        const response = await fetch('/admin/seasonal-discounts', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        if (result.success) {
            showNotification('Seasonal discount saved successfully!', 'success');
            setTimeout(() => location.reload(), 1000);
        } else {
            showNotification('Error saving discount: ' + result.error, 'error');
        }
    } catch (err) {
        showNotification('Error saving discount: ' + err.message, 'error');
    }
}

async function deleteDiscount(id) {
    if (!confirm('Are you sure you want to delete this seasonal discount?')) {
        return;
    }
    
    try {
        const response = await fetch(`/admin/seasonal-discounts/${id}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const result = await response.json();
        if (result.success) {
            showNotification('Seasonal discount deleted successfully!', 'success');
            setTimeout(() => location.reload(), 1000);
        } else {
            showNotification('Error deleting discount: ' + result.error, 'error');
        }
    } catch (err) {
        showNotification('Error deleting discount: ' + err.message, 'error');
    }
}

// Add notification helper function if not present
function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
        <span>${message}</span>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.classList.add('show');
    }, 100);
    
    setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => {
            if (notification.parentNode) {
                document.body.removeChild(notification);
            }
        }, 300);
    }, 3000);
}
</script>
