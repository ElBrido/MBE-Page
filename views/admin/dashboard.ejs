<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
        <p>Welcome back, <%= user.firstName %>! Here's what's happening with your platform.</p>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon users">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.users %></h3>
                <p>Total Users</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon servers">
                <i class="fas fa-server"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.servers %></h3>
                <p>Active Servers</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon orders">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.orders %></h3>
                <p>Paid Orders</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon revenue">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-info">
                <h3>$<%= stats.revenue.toFixed(2) %></h3>
                <p>Total Revenue</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon plans">
                <i class="fas fa-box"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.plans %></h3>
                <p>Active Plans</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon coupons">
                <i class="fas fa-tag"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.coupons %></h3>
                <p>Active Coupons</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon announcements">
                <i class="fas fa-bullhorn"></i>
            </div>
            <div class="stat-info">
                <h3><%= stats.announcements %></h3>
                <p>Announcements</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-grid">
            <a href="/admin/users" class="action-btn">
                <i class="fas fa-users"></i>
                <span>Manage Users</span>
            </a>
            <a href="/admin/servers" class="action-btn">
                <i class="fas fa-server"></i>
                <span>Manage Servers</span>
            </a>
            <a href="/admin/plans" class="action-btn">
                <i class="fas fa-box"></i>
                <span>Manage Plans</span>
            </a>
            <a href="/admin/coupons" class="action-btn">
                <i class="fas fa-tag"></i>
                <span>Manage Coupons</span>
            </a>
            <a href="/admin/announcements" class="action-btn">
                <i class="fas fa-bullhorn"></i>
                <span>Announcements</span>
            </a>
            <a href="/admin/seasonal-discounts" class="action-btn">
                <i class="fas fa-calendar-alt"></i>
                <span>Seasonal Discounts</span>
            </a>
            <a href="/admin/settings" class="action-btn">
                <i class="fas fa-cog"></i>
                <span>Site Settings</span>
            </a>
            <a href="/admin/analytics" class="action-btn">
                <i class="fas fa-chart-bar"></i>
                <span>Analytics</span>
            </a>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="admin-grid">
        <!-- Recent Orders -->
        <div class="admin-section">
            <div class="section-header">
                <h2><i class="fas fa-shopping-cart"></i> Recent Orders</h2>
                <a href="/admin/orders" class="view-all">View All</a>
            </div>
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Plan</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (recentOrders.length === 0) { %>
                            <tr>
                                <td colspan="6" class="no-data">No orders yet</td>
                            </tr>
                        <% } else { %>
                            <% recentOrders.forEach(order => { %>
                                <tr>
                                    <td>#<%= order.id %></td>
                                    <td><%= order.first_name %> <%= order.last_name %></td>
                                    <td><%= order.plan_name || 'Custom' %></td>
                                    <td>$<%= parseFloat(order.price).toFixed(2) %></td>
                                    <td><span class="status-badge <%= order.status %>"><%= order.status %></span></td>
                                    <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="admin-section">
            <div class="section-header">
                <h2><i class="fas fa-users"></i> Recent Users</h2>
                <a href="/admin/users" class="view-all">View All</a>
            </div>
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Joined</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (recentUsers.length === 0) { %>
                            <tr>
                                <td colspan="6" class="no-data">No users yet</td>
                            </tr>
                        <% } else { %>
                            <% recentUsers.forEach(u => { %>
                                <tr>
                                    <td>#<%= u.id %></td>
                                    <td><%= u.first_name %> <%= u.last_name %></td>
                                    <td><%= u.email %></td>
                                    <td><span class="role-badge <%= u.role %>"><%= u.role %></span></td>
                                    <td>
                                        <% if (u.is_active) { %>
                                            <span class="status-badge active">Active</span>
                                        <% } else { %>
                                            <span class="status-badge inactive">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(u.created_at).toLocaleDateString() %></td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/css/admin.css">
